<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical"
              android:layout_marginLeft="5dp"
              android:id="@+id/idClockLayout">

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="3">
        <TextView
                android:id="@+id/idMonth"
                android:gravity="bottom|left"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:text="June"
                android:textSize="18sp"
                android:typeface="monospace"
                android:textStyle="bold"
                android:paddingLeft="5dp"
                android:textColor="#90000000"/>

        <TextView
                android:id="@+id/idTime"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:text="00:00"
                android:textSize="28sp"
                android:gravity="right|bottom"
                android:typeface="monospace"
                android:paddingRight="5dp"
                android:textStyle="bold"
                android:textColor="#000000"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="4">
        <TextView
                android:id="@+id/idDayW1"
                android:text="mon"
                android:layout_weight="6"
                android:textColor="#50000000"
                android:textStyle="bold"
                android:gravity="center"
                android:typeface="monospace"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"/>
        <TextView
                android:id="@+id/idDayW2"
                android:text="tue"
                android:layout_weight="6"
                android:textColor="#50000000"
                android:textStyle="bold"
                android:gravity="center"
                android:typeface="monospace"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"/>
        <TextView
                android:id="@+id/idDayW3"
                android:text="wed"
                android:layout_weight="6"
                android:textColor="#000000"
                android:textStyle="bold"
                android:gravity="center"
                android:typeface="monospace"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"/>
        <TextView
                android:id="@+id/idDayW4"
                android:text="thu"
                android:layout_weight="6"
                android:textColor="#50000000"
                android:textStyle="bold"
                android:gravity="center"
                android:typeface="monospace"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"/>
        <TextView
                android:id="@+id/idDayW5"
                android:text="fri"
                android:layout_weight="6"
                android:textColor="#50000000"
                android:textStyle="bold"
                android:gravity="center"
                android:typeface="monospace"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"/>
        <TextView
                android:id="@+id/idDayW6"
                android:text="sat"
                android:layout_weight="6"
                android:textColor="#50000000"
                android:textStyle="bold"
                android:gravity="center"
                android:typeface="monospace"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"/>
        <TextView
                android:id="@+id/idDayW7"
                android:text="sun"
                android:layout_weight="6"
                android:textColor="#50000000"
                android:textStyle="bold"
                android:gravity="center"
                android:typeface="monospace"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"/>
        <TextView
                android:id="@+id/idYear"
                android:text="2011"
                android:layout_weight="6"
                android:textColor="#000000"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="14sp"
                android:typeface="monospace"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="3">
        <TextView
                android:id="@+id/idDay1"
                android:text="6"
                android:layout_weight="6"
                android:textColor="#50000000"
                android:textStyle="bold"
                android:gravity="center_horizontal|top"
                android:typeface="monospace"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:includeFontPadding="false"/>
        <TextView
                android:id="@+id/idDay2"
                android:text="7"
                android:layout_weight="6"
                android:textColor="#50000000"
                android:textStyle="bold"
                android:gravity="center_horizontal|top"
                android:typeface="monospace"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:includeFontPadding="false"/>
        <TextView
                android:id="@+id/idDay3"
                android:text="8"
                android:layout_weight="6"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="22sp"
                android:gravity="center_horizontal|top"
                android:typeface="monospace"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:includeFontPadding="false"/>
        <TextView
                android:id="@+id/idDay4"
                android:text="9"
                android:layout_weight="6"
                android:textColor="#50000000"
                android:textStyle="bold"
                android:gravity="center_horizontal|top"
                android:typeface="monospace"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:includeFontPadding="false"/>
        <TextView
                android:id="@+id/idDay5"
                android:text="10"
                android:layout_weight="6"
                android:textColor="#50000000"
                android:textStyle="bold"
                android:gravity="center_horizontal|top"
                android:typeface="monospace"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:includeFontPadding="false"/>
        <TextView
                android:id="@+id/idDay6"
                android:text="11"
                android:layout_weight="6"
                android:textColor="#50000000"
                android:textStyle="bold"
                android:gravity="center_horizontal|top"
                android:typeface="monospace"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:includeFontPadding="false"/>
        <TextView
                android:id="@+id/idDay7"
                android:text="12"
                android:layout_weight="6"
                android:textColor="#50000000"
                android:textStyle="bold"
                android:gravity="center_horizontal|top"
                android:typeface="monospace"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:includeFontPadding="false"/>
        <ImageView
                android:id="@+id/idMissedIcon"
                android:src="@drawable/empty_icon"
                android:scaleType="center"
                android:layout_gravity="top"
                android:layout_weight="6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>