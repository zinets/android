<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >

    <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/idClockSection"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            >
        <TextView
                android:id="@+id/idTimeFormat"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:layout_gravity="top"
                android:text="pm"/>
        <TextView
                android:id="@+id/idTime"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textColor="#ffffff"
                android:textSize="56sp"
                android:layout_gravity="top"
                android:layout_marginTop="-15dp"
                android:text="00 : 00"/>

    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:id="@+id/idDateSection"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            >
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center|bottom"
                >
            <TextView
                    android:id="@+id/idDayOfMonth"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="31"
                    android:textColor="#ffffff"
                    android:layout_marginBottom="-3dp"
                    android:textSize="22sp"/>
            <TextView
                    android:id="@+id/idMonthYear"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="/12/2011"
                    android:textColor="#b8b8b8"
                    android:layout_marginBottom="-3dp"
                    android:textSize="20sp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center|top"
                >
            <TextView
                    android:id="@+id/idSunDay"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="SUN "
                    android:textColor="#b8b8b8"
                    android:textSize="20sp"/>
            <TextView
                    android:id="@+id/idMonDay"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="MON "
                    android:textColor="#ffffff"
                    android:textSize="20sp"/>
            <TextView
                    android:id="@+id/idTueDay"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="TUE "
                    android:textColor="#b8b8b8"
                    android:textSize="20sp"/>
            <TextView
                    android:id="@+id/idWedDay"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="WED "
                    android:textColor="#b85d70ae"
                    android:textSize="20sp"/>
            <TextView
                    android:id="@+id/idThuDay"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="THU "
                    android:textColor="#7f5d70ae"
                    android:textSize="20sp"/>
            <TextView
                    android:id="@+id/idFriDay"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="FRI "
                    android:textColor="#5d70ae"
                    android:textSize="20sp"/>
            <TextView
                    android:id="@+id/idSatDay"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="SAT"
                    android:textColor="#4f0000ff"
                    android:textSize="20sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>