<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
            android:entries="@array/wide_1x4_color_themes"
            android:entryValues="@array/wide_1x4_color_themes_values"
            android:title="@string/widget_theme_title"
            android:key="widgetTheme"
            android:summary="@string/widget_theme_summary"
            android:defaultValue="0"/>
    <CheckBoxPreference
            android:title="@string/widget_theme_inverted_color_title"
            android:summaryOn="@string/widget_theme_use_dark_summary"
            android:summaryOff="@string/widget_theme_use_light_summary"
            android:key="widgetInvertedColor"
            android:defaultValue="false"/>

    <PreferenceCategory
            android:title="@string/behavior">
        <ListPreference
                android:title="@string/clock_tap_title"
                android:summary="@string/clock_tap_summary"
                android:key="clockAction"
                android:defaultValue="0"/>
        <ListPreference
                android:title="@string/date_tap_title"
                android:summary="@string/date_tap_summary"
                android:key="dateAction"
                android:defaultValue="0"/>
    </PreferenceCategory>
</PreferenceScreen>