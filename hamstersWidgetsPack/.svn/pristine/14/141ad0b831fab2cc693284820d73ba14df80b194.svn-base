<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">

    <RelativeLayout
            android:id="@+id/idClockSection"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        <TextView
                android:id="@+id/idHours"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:includeFontPadding="false"
                android:text="13"
                android:textSize="90sp"
                android:textColor="#ffffff"
                android:shadowColor="#7f000000"
                android:shadowRadius="1.5"
                android:layout_marginTop="-10dp"
                android:layout_alignParentRight="true"/>
        <TextView
                android:id="@+id/idMins"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:includeFontPadding="false"
                android:text="45"
                android:textSize="90sp"
                android:textColor="#af0000ff"
                android:shadowColor="#7f888888"
                android:shadowRadius="1.5"
                android:layout_alignRight="@id/idHours"
                android:layout_marginTop="30dp"/>
        <TextView
                android:id="@+id/idDayOfWeek"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="SUNDAY"
                android:textColor="#af0000ff"
                android:textStyle="bold"
                android:textSize="16sp"
                android:shadowColor="#7f888888"
                android:shadowRadius="0.5"
                android:layout_alignRight="@id/idHours"
                android:layout_below="@id/idHours"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dip"
                android:layout_marginLeft="6dip"
                />
        <TextView
                android:id="@id/idDate"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="31 DECEMBER"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:shadowColor="#7f000000"
                android:shadowRadius="1.5"
                android:layout_marginRight="10dip"
                android:layout_marginLeft="6dip"
                android:layout_below="@id/idDayOfWeek"
                android:layout_alignRight="@id/idHours"
                android:layout_marginTop="-5dp"
                />
        <TextView
                android:id="@id/idTimeFormat"
                android:text="AM"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#f7f2f2"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/idHours"
                android:layout_alignBaseline="@id/idHours"
                />
        <ImageView
                android:id="@+id/idDivider"
                android:layout_width="3dp"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/idMins"
                android:layout_alignTop="@id/idDayOfWeek"
                android:layout_alignBottom="@id/idDate"
                android:layout_marginRight="3dp"
                android:layout_marginTop="4dp"
                />
    </RelativeLayout>

</LinearLayout>