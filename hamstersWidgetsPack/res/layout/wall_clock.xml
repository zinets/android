<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/idClockSection">
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_alignParentTop="true">

        <ImageView
                android:visibility="gone"
                android:id="@+id/idMissedEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingRight="15dp"
                android:src="@drawable/wall_new_event"
                />
        <ImageView
                android:visibility="gone"
                android:id="@+id/idMissedSms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingRight="15dp"
                android:src="@drawable/wall_missed_sms"
                />
        <ImageView
                android:visibility="gone"
                android:id="@+id/idMissedMail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingRight="15dp"
                android:src="@drawable/wall_missed_mail"
                />
        <ImageView
                android:visibility="gone"
                android:id="@+id/idMissedCall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingRight="15dp"
                android:src="@drawable/wall_missed_call"/>
    </LinearLayout>

    <ImageView
            android:id="@+id/idTime"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            />

</RelativeLayout>