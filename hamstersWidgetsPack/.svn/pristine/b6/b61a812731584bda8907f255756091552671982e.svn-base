<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">

    <!-- week days -->
    <LinearLayout
            android:layout_weight="3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingLeft="10dp">
        <TextView
                android:id="@+id/idDaysBefore"
                android:text="MONTUEWED"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:shadowColor="#7f000000"
                android:shadowRadius="1.0"
                android:textColor="#033709"
                />
        <TextView
                android:id="@+id/idDayOfWeek"
                android:text=""
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textSize="22sp"
                android:shadowColor="#7f000000"
                android:shadowRadius="1.0"
                android:textColor="#a2d89e"
                />
        <TextView
                android:id="@+id/idDaysAfter"
                android:text="THUFRISATSUN"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:shadowColor="#7f000000"
                android:shadowRadius="1.0"
                android:textColor="#033709"
                />
    </LinearLayout>
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="2dp"/>

    <!-- date/time-->
    <LinearLayout
            android:id="@+id/idClockSection"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:background="#7f092906">
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:gravity="center_vertical|left">

            <TextView
                    android:id="@+id/idTime"
                    android:text="9:04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:textSize="60sp"
                    android:textColor="#a2d89e"
                    />
            <TextView
                    android:id="@+id/idTimeFormat"
                    android:text="AM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#a2d89e"
                    />
        </LinearLayout>
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:gravity="center_vertical|right">
            <TextView
                    android:id="@+id/idDate"
                    android:text="32 February"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingRight="15dp"
                    android:textSize="20sp"
                    android:textColor="#a2d89e"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>